.page, page {
    width: 100%;
    height: 100%;
}

.top {
    height: 10%;
    width: 100%;
    background-color: rgba(178, 233, 149, 0.055);
    position: relative;
    box-shadow: 0 0 30rpx 3rpx rgba(0, 0, 0, 0.1);
}

.top-bar {
    height: 60rpx;
    width: 380rpx;
    border-radius: 60rpx;
    /* border: 5rpx solid #555; */
    background: #23f1ad;
    justify-content: around;
}

