}

/* 块级元素文字居中 */

.text-center {
    text-align: center;
}

/* 行内元素文本水平垂直居中 */

.inline-center {
    display: block;
    position: relative;
    top: 50%;
    text-align: center;
    transform: translate(0, -50%);
}

/* 行内元素文本水平垂直居左 */

.inline-left {
    display: block;
    position: relative;
    top: 50%;
    text-align: left;
    transform: translate(0, -50%);
}

/* 行内元素文本水平垂直居右 */

.inline-right {
    display: block;
    position: relative;
    top: 50%;
    text-align: right;
    transform: translate(0, -50%);
}

/* 让子元素水平垂直居中 */

.child-align {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 让子元素垂直居右 */

.child-left {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

/* 让子元素垂直居右 */

.child-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

/* 让子元素垂直居中，两边无缝隙 */

.child-between {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* 让子元素环绕布局 */

.child-around {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    align-items: center;
}

/* 让子元素竖直水平居中排列 */

.child-col-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.pd {
    padding: 40rpx;
    box-sizing: border-box;
}

.none {
    display: none;
}

.label {
    width: 100%;
    margin-bottom: 30rpx;
}

.table,
.row {
    display: flex;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;
    margin-bottom: 50rpx;
}

.th {
    width: 50%;
    height: 100rpx;
    background-color: rgba(173, 202, 157, 0.137);
    font-size: 14px;
    display: flex;
    align-items: center;
    border: 1rpx solid #eee;
    border-right: none;
    font-weight: bold;
    color: #555;
    justify-content: center;
    box-sizing: border-box;
    margin-top: -1rpx;
}

.tr {
    width: 50%;
    height: 100rpx;
    font-size: 14px;
    display: flex;
    align-items: center;
    border: 1rpx solid #eee;
    box-sizing: border-box;
    color: #555;
    justify-content: center;
    margin-top: -1rpx;
}

.tline {
    display: flex;
    align-items: center;
    width: 100%;
    flex-wrap: wrap;
}

.card {
    width: 600rpx;
    height: 450rpx;
    border: 1rpx solid rgb(214, 212, 212);
    border-radius: 10rpx;
    background: #fff;
    margin-bottom: 80rpx;
    display: flex;
    flex-direction: column;
}

.card-top,
.card-bottom {
    padding: 30rpx;
    box-sizing: border-box;
}

.card-top {
    flex: 18;
    border-bottom: 1rpx solid rgb(214, 212, 212);
    display: flex;
    align-items: center;
}


.card-bottom {
    flex: 2;
    /* border: 1px solid #ccc; */
}

.card-top image {
    flex: 4;
    height: 80%;
    padding: 10rpx;
    box-sizing: border-box;
    /* border: 1px solid #ccc; */
}

.card-top .details {
    flex: 6;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    /* border: 1px solid #ccc; */
}

.details .title {
    flex: 3;
    display: flex;
    justify-content: center;
    align-items: center;
    /* border: 1rpx solid #ccc; */
}

.details .jianjie {
    flex: 7;
    display: flex;
    justify-content: center;
    align-items: center;
    /* border: 1rpx solid #ccc; */
}

.forum-add {
    width: 110rpx;
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 75%;
    top: 85%;
    border-radius: 50%;
    background-color: #23f1ad;
}

.forum-add image {
    width: 60rpx;
    height: 60rpx;
    margin: 0;
}