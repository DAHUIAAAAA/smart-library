<!-- 发布论坛内容板块 -->
<!-- 最大的父容器 -->
<view class="add-container">
    <!-- 头部栏 -->
    <view class="top child-around">
        <view class="top-bar">
            <text class="inline-center little-font1">发布论坛内容</text>
        </view>
    </view>
    <!-- 发布内容模块 -->
    <form action="/addForum">
        <!-- 标题栏 -->
        <view class="title-section">
            <view class="label">标题</view>
            <input name="title" type="text" placeholder="添加标题"/>
        </view>
        <!-- 内容栏 -->
        <view class="content-section">
            <view class="label">内容</view>
            <textarea name="content" bindinput="getText" placeholder="快来分享你的感想吧"/>
        </view>
        <!-- 发布内容栏 -->
        <view class="addMessage-section">
            <button form-type="submit">一键发布</button>
        </view>
    </form>
</view>