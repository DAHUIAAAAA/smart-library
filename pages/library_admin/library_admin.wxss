.cover-remove-seat {
  width: 100%;
  height: 100%;
  background-color: #dddddd;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.5;
  z-index: 9001;
  transition: all 0.7;
}

.remove-seat {
  width: 80%;
  height: 30%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%) scale(0);
  background-color: #fff;
  border-radius: 30rpx;
  z-index: 9002;
  transition: all 0.7s;
}