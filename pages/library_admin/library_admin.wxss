/* 页面容器 */
.page,
page {
  height: 100%;
  width: 100%;
}

.slide-click {
  width: 80rpx;
  height: 80rpx;
  border-radius: 0 80rpx 80rpx 0;
  border: 5rpx solid #555;
  box-sizing: border-box;
  /* background-color:  rgba(152,245,255,1); */
  background-color: #23f1ad;
  transform-origin: 0% 50%;
  z-index: 10000;
  /* transform: translate(0,-50%); */
}

.translate {
  transform: translate(60%,0);
}

.page .cover {
  width: 100%;
  height: 100%;
  background-color: #dddddd;
  position: fixd;
  opacity: 0.5;
  z-index: 9000;
}

.none {
  pointer-events: none;
}

.slide-text .hidden {
  height: 0;
  transition: all 0.5s ease;
}

.current {
  height: 300rpx;
  transition: all 0.5s ease;
}

.slide-click-after {
  width: 35rpx;
  height: 35rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  border-top: 15rpx solid #fff;
  border-right: 15rpx solid #fff;
  /* transform: rotate(45deg); */
  /* background-color: #fff; */
}

.slide-left {
  width: 100%;
  height: 100%;
  position: fixd;
  z-index: 0;
}

.slide-left-content {
  width: 60%;
  height: 100%;
}

.slide-text {
  width: 100%;
  text-align: centr;
  background-color: #f9f9f9;
}

.slide-text .floor {
  /* height: 80rpx; */
  padding: 25rpx 0;
  border-bottom: 5rpx solid #fdfdfd;
  box-sizing: border-box;
}

.slide-text .menu {
  width: 100%;
  overflow: hidden;
  background-color: #fdfdfd;
  text-align: center;
}

.slide-right {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #fff;
  z-index: 0;
  transition: all 0.5s ease;
}


