/* pages/library/library.wxss */
/* 页面容器 */
.page,
page {
  height: 100%;
  width: 100%;
}

.slide-click {
  width: 80rpx;
  height: 80rpx;
  border-radius: 0 80rpx 80rpx 0;
  border: 5rpx solid #555;
  box-sizing: border-box;
  /* background-color:  rgba(152,245,255,1); */
  background-color: #23f1ad;
  transform-origin: 0% 50%;
  z-index: 10000;
  /* transform: translate(0,-50%); */
}

.translate {
  transform: translate(60%,0);
}

.page .cover {
  width: 100%;
  height: 100%;
  background-color: #dddddd;
  position: fixd;
  opacity: 0.5;
  z-index: 9000;
}

.none {
  pointer-events: none;
}

.slide-text .hidden {
  height: 0;
  transition: all 0.2s ease;
}

.current {
  height: 300rpx;
  transition: all 0.2s ease;
}

.slide-click-after {
  width: 35rpx;
  height: 35rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  border-top: 15rpx solid #fff;
  border-right: 15rpx solid #fff;
}

.slide-left {
  width: 100%;
  height: 100%;
  position: fixd;
  z-index: 0;
}

.slide-left-content {
  width: 60%;
  height: 100%;
}

.slide-text {
  width: 100%;
  text-align: centr;
  background-color: #f9f9f9;
}

.slide-text .floor {
  /* height: 80rpx; */
  padding: 25rpx 0;
  border-bottom: 5rpx solid #fdfdfd;
  box-sizing: border-box;
}

.slide-text .menu {
  width: 100%;
  overflow: hidden;
  background-color: #fdfdfd;
  text-align: center;
}

.slide-right {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #fff;
  z-index: 0;
  transition: all 0.2s ease;
}


.top {
  height: 10%;
  width: 100%;
  background-color: rgba(178, 233, 149, 0.055);
  position: relative;
  box-shadow: 0 0 30rpx 3rpx rgba(0,0,0,0.1);
}

.top-bar {
   height: 60rpx;
  width: 380rpx;
  margin-right: 170rpx;
  border-radius:60rpx;
  border: 5rpx solid #555;
  background: #23f1ad;
}

.main {
  height: 80%;
  width: 100%;
  background-color: rgba(160, 160, 160, 0.116);
}

.door {
  width:175px;
  height: 0;
  border-top:80rpx solid rgba(160, 160, 160, 0.178);
  border-right:15rpx solid transparent;
  border-left:15rpx solid transparent;
}

.door-font {
  margin-top: -40rpx;
}

.main-place {
  width: 100%;
  height: 80%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  padding: 50rpx 0 50rpx 0;
  box-sizing: border-box;
}

.main-place .desk {
  width: 300rpx;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.main-place .desk .seat {
  width: 50%;
  height: 50%;
}

.seat-image {
  width: 33px;
  height: 33px;
}

.seat-image-foot {
  width: 25px;
  height: 25px;
}

.foot {
  height: 10%;
  width: 100%;
  background-color: rgba(160, 160, 160, 0.055);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.foot-seat {
  width: 300rpx;
  height: 80rpx;
  border-radius: 80rpx;
}