/* pages/comment/comment.wxss */
.pd {
    padding: 80rpx 40rpx;
}
.row {
    justify-content: center;
}

.card {
    flex-direction: row;
    height: auto;
    width: 100%;
    border: none;
}

.card-left,
.card-right {
    /* border: 1rpx solid #ccc; */
}

.card-left {
    flex: 3;
}

.card-right {
    flex: 10;
    line-height: 50rpx;
    background-color: rgb(247, 247, 247);
    padding: 10rpx 40rpx 30rpx;
    box-sizing: border-box;
    border-radius: 15rpx;
    margin-left: 40rpx;
}

.card-right::before {
    content: '';
    display: block;
    width: 40rpx;
    height: 40rpx;
    transform: translate(-60rpx,20rpx) rotate(45deg);
    background-color: rgb(247, 247, 247);
    transform-origin: center center;
}


.card-left image {
    width: 100rpx;
    height: 100rpx;
    border: 1rpx solid #eee;
    border-radius: 50%;
}